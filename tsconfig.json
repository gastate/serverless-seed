{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "alwaysStrict": true,
        "noImplicitAny": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "declaration": true,
        "outDir": "./build",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}